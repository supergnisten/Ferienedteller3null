<Window x:Class="Ferienedteller3null.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ferienedteller3null" 
        mc:Ignorable="d"
        Title="Ferienedteller" DataContext="{StaticResource MainViewModel}" Height="600" Width="1000"  Icon="Images/nedtelling_ikon.ico" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Topmost="{Binding AlwaysOnTop}">
    <Window.Background>
        <ImageBrush ImageSource="Images/SnowyChristmas.jpg"/>
    </Window.Background>

    <DockPanel>
      
        <Label Content="Juleferie om" FontSize="45" Foreground="Red"  DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <Label Content="{Binding RestTimeToVacationString}" FontSize="65" Foreground="Red" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <Label Content="Julen ringes inn om" FontSize="45" Foreground="Red" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <Label Content="{Binding RestTimeToChristmasString}" FontSize="65" Foreground="Red" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <Label Content="God Jul" FontSize="45" HorizontalAlignment="Center" DockPanel.Dock="Top" Foreground="Red"/>
        <Label Content="{Binding UserName}" Foreground="Red" FontSize="45" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Height="25" VerticalAlignment="Bottom">
            <Label Content="Feriedato" Foreground="Red" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" SelectedDateFormat="Short" FirstDayOfWeek="Monday" VerticalAlignment="Center"/>
            <TextBox Width="50" Margin="2" Text="{Binding SelectedVacationHour, StringFormat=HH:mm}" VerticalAlignment="Center"/>
            <ComboBox Visibility="Hidden" ItemsSource="{Binding ThemeSources}" SelectedItem="{Binding SelectedImageSources}" DisplayMemberPath="Name" Width="125" Margin="5"/>
            <CheckBox IsChecked="{Binding UseShortTextTimeString}" Content="Bruk kort tekst på tiden" Foreground="Red" VerticalAlignment="Center"/>
            <CheckBox IsChecked="{Binding AlwaysOnTop}" Content="Vis alltid på topp" Foreground="Red" VerticalAlignment="Center" Margin="5,0,10,0"/>
        </StackPanel>
    </DockPanel>
</Window>
